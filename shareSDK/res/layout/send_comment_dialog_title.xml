<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/aa_app_list_item_background"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/normal_padding"
    android:paddingBottom="@dimen/normal_padding"
	android:paddingLeft="@dimen/small_padding"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/comment_dialog_icon"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_width="@dimen/icon_height"
        android:visibility="gone"
        android:layout_height="@dimen/icon_width" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/xsmall_margin"
        android:layout_marginRight="@dimen/xsmall_margin"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/comment_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_dialog_title"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/normal_text_color_black"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/comment_dialog_version_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:ellipsize="marquee"
            android:gravity="bottom"
            android:singleLine="true"
            android:textColor="@color/normal_text_color_gray"
            android:visibility="gone"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

</LinearLayout>