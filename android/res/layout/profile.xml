<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rank_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_info_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:weightSum="1" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_width"
            android:layout_height="@dimen/avatar_width"
            android:layout_marginTop="8dp"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_username"
            android:gravity="center"
            android:paddingTop="4dp"
            android:textColor="#fdfcc4"
            android:textSize="16sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/profile_tab_bg"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/event_info_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_tab"
                android:button="@null"
                android:gravity="center"
                android:text="@string/event_info"
                android:textColor="@color/profile_tab_text_color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/gift_info_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_tab"
                android:button="@null"
                android:gravity="center"
                android:text="@string/gift_info"
                android:textColor="@color/profile_tab_text_color"
                android:textSize="16sp" />
        </RadioGroup>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/profile_h_line" />

        <LinearLayout
            android:id="@+id/event_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/daily_event"
                    style="@style/GreenText"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_match" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/profile_dash_line_repeated" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/integral"
                        style="@style/GreenText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/integral" />

                    <TextView
                        android:id="@+id/point"
                        style="@style/GreenText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/point" />

                    <TextView
                        android:id="@+id/rank"
                        style="@style/GreenText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rank" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lbs_event"
                    style="@style/GreenText"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="@string/lbs_event" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/profile_dash_line_repeated" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/fight_count"
                        style="@style/GreenText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fight_count" />

                    <TextView
                        android:id="@+id/win_count"
                        style="@style/GreenText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/win_count" />

                    <TextView
                        android:id="@+id/win_rate"
                        style="@style/GreenText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/win_rate" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gift_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:visibility="gone" >

            <GridView
                android:id="@+id/gift_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnWidth="130dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:listSelector="@null"
                android:numColumns="2"
                android:smoothScrollbar="true"
                android:soundEffectsEnabled="true"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp"
                android:clickable="false"
                android:duplicateParentState="true"
                >
            </GridView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>