<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rank_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_title" />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_info_bg"
        android:gravity="center_horizontal"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:weightSum="1"
        android:orientation="vertical">
        
        <ImageView 
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_width"
            android:layout_height="@dimen/avatar_width"
            android:layout_marginTop="8dp"
            android:src="@drawable/default_avatar"/>
        
        <TextView 
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#fdfcc4"
            android:background="@drawable/profile_username"/>
        
        <RadioGroup 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:background="@drawable/profile_tab_bg">
            
            <RadioButton 
                android:id="@+id/event_info_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_info"
                android:textSize="16sp"
                android:textColor="@color/profile_tab_text_color"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/profile_tab" />
            
            <RadioButton 
                android:id="@+id/gift_info_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gift_info"
                android:textSize="16sp"
                android:textColor="@color/profile_tab_text_color"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/profile_tab" />
            
        </RadioGroup>
        
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/profile_h_line"/>
        
        <LinearLayout
            android:id="@+id/event_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:weightSum="2" >
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                
                <TextView 
                    android:id="@+id/daily_event"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    style="@style/GreenText"
                    android:text="@string/daily_match" />
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/profile_dash_line_repeated" />
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical">
                    
                    <TextView 
                        android:id="@+id/integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/GreenText"
                        android:text="@string/integral"/>
                    
                    <TextView 
                        android:id="@+id/point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/GreenText"
                        android:text="@string/point"/>
                    
                    <TextView 
                        android:id="@+id/rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/GreenText"
                        android:text="@string/rank"/>
                </LinearLayout>
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                
                <TextView 
                    android:id="@+id/lbs_event"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    style="@style/GreenText"
                    android:text="@string/lbs_event" />
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/profile_dash_line_repeated" />
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical">
                    
                    <TextView 
                        android:id="@+id/fight_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/GreenText"
                        android:text="@string/fight_count"/>
                    
                    <TextView 
                        android:id="@+id/be_fight_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/GreenText"
                        android:text="@string/be_fight_count"/>
                    
                    <TextView 
                        android:id="@+id/win_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/GreenText"
                        android:text="@string/win_rate" />
                </LinearLayout>
                
            </LinearLayout>
            
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/gift_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>