<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/popup_dialog_width"
    android:layout_height="@dimen/popup_dialog_height"
    android:background="@drawable/popup_bg" >

    <RelativeLayout
        android:id="@+id/fight_req"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <TextView
            android:id="@+id/fight"
            style="@style/PopupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/popup_title_marginTop"
            android:text="@string/fight" />

        <TextView
            android:id="@+id/somebody"
            style="@style/PopupSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fight"
            android:layout_centerHorizontal="true"
            android:text="@string/somebody" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/raise"
                style="@style/GreenText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/raise" />

            <EditText
                android:id="@+id/raise_value"
                style="@style/GreenText"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bet"
                android:hint="0"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/req_fight"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_ok"
                android:text="@string/fight_req" />

            <Button
                android:id="@+id/cancel"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/popup_cancel"
                android:text="@string/cancel" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fight_resp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <TextView
            android:id="@+id/receive_fight"
            style="@style/PopupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/popup_title_marginTop"
            android:text="@string/receive_fight" />

        <TextView
            android:id="@+id/somebody_receive"
            style="@style/PopupSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/receive_fight"
            android:layout_centerHorizontal="true"
            android:text="@string/somebody_receive" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="16dp" >

            <ImageView
                android:id="@+id/other_avatar_resp"
                android:layout_width="@dimen/avatar_width"
                android:layout_height="@dimen/avatar_width"
                android:src="@drawable/default_avatar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="vertical" >

                <com.baidu.soushang.views.ScrollAlwaysTextView
                    android:id="@+id/other_resp"
                    style="@style/GreenText"
                    android:layout_width="@dimen/shop_item_name_width"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/other_event_count_resp"
                    style="@style/GreenText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/other_win_rate_resp"
                    style="@style/GreenText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/popup_button_marginBottom"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/accept"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_ok"
                android:text="@string/accept" />

            <Button
                android:id="@+id/reject"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/popup_cancel"
                android:text="@string/reject" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fight_waiting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" >

        <TextView
            android:id="@+id/waiting"
            style="@style/PopupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/popup_title_marginTop"
            android:text="@string/waiting" />

        <TextView
            android:id="@+id/somebody_resp"
            style="@style/PopupSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/waiting"
            android:layout_centerHorizontal="true"
            android:text="@string/somebody_resp" />

        <LinearLayout
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="24dp" >

            <TextView
                android:id="@+id/vs"
                style="@style/GreenText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vs" />

            <ImageView
                android:id="@+id/connecting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/connecting" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/center"
            android:orientation="vertical"
            android:paddingTop="24dp" >

            <ImageView
                android:id="@+id/my_avatar"
                android:layout_width="@dimen/avatar_width"
                android:layout_height="@dimen/avatar_width"
                android:src="@drawable/default_avatar" />

            <TextView
                android:id="@+id/me"
                style="@style/GreenText"
                android:layout_width="@dimen/avatar_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/me" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="24dp" >

            <ImageView
                android:id="@+id/other_avatar"
                android:layout_width="@dimen/avatar_width"
                android:layout_height="@dimen/avatar_width"
                android:src="@drawable/default_avatar" />

            <TextView
                android:id="@+id/other"
                style="@style/GreenText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="@dimen/avatar_width" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/popup_button_marginBottom"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel_fight"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_cancel"
                android:text="@string/cancel" />
        </LinearLayout>

        <ImageView
            android:id="@+id/countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

</FrameLayout>