<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/gift_showbg1" >

    <ImageView
        android:id="@+id/shop_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gift_showcover" />

    <ImageView
        android:id="@+id/shop_item_imag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_item_title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gift_qinghuaci2"
         />

    <LinearLayout
        android:id="@+id/shop_item_backlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_item_imag"
        android:background="@drawable/gift_showbg2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/shop_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:maxEms="9"
            android:text="读卡器手机做得得得得"
            android:textColor="#536f03"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/shop_item_marktitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:maxEms="5"
                android:text="@string/intergraltitle"
                android:textColor="#536f03"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/shop_item_marknum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:maxEms="5"
                android:text="@string/intergralnum"
                android:textColor="#b93f06"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/shop_item_exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_item_backlin"
        android:layout_centerHorizontal="true"
        android:background="@drawable/exchange"
        android:gravity="center"
        android:text="@string/intergralexchange"
        android:textColor="#fdfcc4"
        android:textSize="15sp" 
        android:layout_marginBottom="37dp"
        />

</RelativeLayout>