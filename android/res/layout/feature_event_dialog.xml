<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feature_dialog_back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/introbg"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="16dp"
    android:paddingTop="12dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="7dp"
        android:text="@string/name"
        android:textColor="#ffffff"
        android:textSize="19sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp" >

        <TextView
            android:id="@+id/introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/feature_dialog_introduce_marginleft"
            android:text="@string/soushang_content"
            android:textColor="#536f03"
            android:textSize="16sp" />
    </ScrollView>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/feature_event_dialog_btn_margintop"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/feature_event_dialog_btn_marginbottom" >

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fight_dialog_btn_range"
            android:background="@drawable/feature_dialog_start"
            android:gravity="center"
            android:text="@string/feature_dialog_start"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fight_dialog_btn_range"
            android:layout_marginTop="@dimen/feature_cancel_margintop"
            android:background="@drawable/feature_dialog_cancel"
            android:gravity="center"
            android:text="@string/feature_dialog_cancel"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>