<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@drawable/rank_bg" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="@dimen/hangtag_marginTop">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/shop_word_bg">
            <TextView 
                android:id="@+id/go_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#536f03"
                android:text="@string/go_shop_web" />
            <TextView 
                android:id="@+id/shop_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#6f4203"
                android:text="@string/shop_url" />
        </LinearLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shop_window" >
            <Button
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/left"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" />
            <Button
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
            <android.support.v4.view.ViewPager
                android:id="@+id/gifts" 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/left"
                android:layout_toLeftOf="@id/right"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/shop_title" />
</FrameLayout>